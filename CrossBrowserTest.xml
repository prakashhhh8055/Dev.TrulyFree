        	<class name="testCases.TC002_SignupViaPhoneNumberTest"/>
        	<class name="testCases.TC003_VerifyLoginViaPhoneNumber"/>
        	<class name="testCases.TC004_VerifyLoginViaEmail"/>
    	</classes>
  </test> <!-- Test -->
  
  <test name="firefoxtest">
    <parameter name="os" value="Windows"/>
    <parameter name="browser" value="firefox"/>
        	<classes>
     		<class name="testCases.TC001_SignupViaEmailTest"/>
        	<class name="testCases.TC002_SignupViaPhoneNumberTest"/>
        	<class name="testCases.TC003_VerifyLoginViaPhoneNumber"/>
        	<class name="testCases.TC004_VerifyLoginViaEmail"/>
